/* pages/salecenter/bounsDetails/bounsDetails.wxss */
page{
  background: #eeeef7;
}
.flex-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}
.wired{
  border-top: 1rpx solid #f2f2f2;
}
.green-color{
  color: #00a09a;
}
.gray-color{
  color: #999;
}
.spacing{
  margin-top: 20rpx;
}
.enable{
  border-bottom: 4rpx solid #00a09a;
  color: #00a09a!important;
}
.bouns-header{
  color: #00a09a;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  justify-content: space-around;
  background: #fff;
  margin-bottom: 20rpx;
  height: 180rpx;
}
.bouns-item{
  width: 33%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-left: 1rpx solid #f2f2f2;
  padding: 0rpx 30rpx;
}
.bouns-item:first-child{
  border-left: none;
}
.bouns-item text{
  display: block;
}
.bouns-item>text:last-child{
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #999;
}
.switch-tab{
  background: #fff;
}
.switch-tab view{
  width: 50%;
  text-align: center;
  font-size: 28rpx;
  border-right: 1rpx solid #f2f2f2;
  color: #000;
  height: 80rpx;
  line-height: 80rpx;
}
.order-title{
  justify-content: space-between;
  padding:10rpx 0rpx;
}
.order-more-icon image{
  width: 40rpx;
  height: 40rpx;
  vertical-align:middle;
}
.order-body{
  padding: 20rpx 0rpx;
  border-top: 1rpx solid #f2f2f2;
  height:160rpx;
}
.order-body image{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.order-details{
  font-size: 24rpx;
  background: #fff;
  padding: 0rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
}
.body-left{
  width: 50%;
}
.body-right{
  text-align: right;
  width: 50%;
}
.order-footer{
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  width: 100%;
  border-top: 1rpx solid #f2f2f2;
}

