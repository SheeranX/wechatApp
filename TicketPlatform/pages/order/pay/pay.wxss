/* pages/order/pay/pay.wxss */
page{
  background: #eeeef7;
}
.orderProfile{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding:20rpx 40rpx;
  margin:20rpx 0rpx;
  color: #3e3e3e;
  font-size: 28rpx;
  background: #fff;
}
.orderId{
  color: #3e3e3e;
  font-weight: 500;
}
.onlinePay{
  color: #000;
}
.timeLeft>view:first-child>text{
  color: #666;
}
.orderProfile>view{
  margin: 10rpx 0rpx;
}
.onlinePay>text:last-child{
  color: #00a09a;
}
.timeLeft{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
}
.timeLeft image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}

.timeLeft>view:last-child>text{
  color: #ffb033;
  font-size: 24rpx;
}
.choosePay{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 100%;
  background: #fff;
}
.payicon{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #666;
  align-items:center;
  border-bottom: 1rpx solid #ededed;
  padding: 0rpx 40rpx;
}
.payicon>view:first-child{
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  height: 100rpx;
}
.payImg image{
  width: 85rpx;
  height: 80rpx;
  margin-top: 10rpx;
}
.isCheck image{
  width: 40rpx;
  height: 40rpx;
}
.payInfo{
  line-height: 100rpx;
  height: 100rpx;
  margin-left: 50rpx;
}
.loadMore{
  width: 100%;
  height: 100rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  background: #fff;

}
.loadMore image{
  width: 32rpx;
  height: 19rpx;
}
.payBar{
  position: fixed;
  z-index: 99;
  bottom: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  box-sizing: border-box;
  padding-left: 40rpx;
  background: #fff;
  border-top: 1rpx solid #ccc;
  height: 100rpx;
  color: #666;
  font-size: 28rpx;
  justify-content: space-between;
  align-items: center;
}
.payBar image{
  width: 32rpx;
  height: 19rpx;
  margin-left: 80rpx;
}
.leftTotal{
  width: 450rpx;
  height: 80rpx;
  box-sizing: border-box;
  line-height: 80rpx;
}
.leftTotal>text:nth-child(2){
  color:#00a09a;
}
.rightBtn{
  text-align: center;
  width: 300rpx;
  background: -webkit-linear-gradient(left, #00b9c6 ,#00a4b5, #008ea3);
  color: #fff;
  box-sizing: border-box;
  height: 100rpx;
  line-height: 100rpx;
}
.dialog{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .7);
  transform: translateY(0);
  transition: all 0.4s ease;
}
.dialog_card{
  position: fixed;
  width: 100%;
  background: #fff;
  bottom: 75rpx; 
  padding:20rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  transition: all 0.5s ease;
}
.dialog_title{
  font-size: 28rpx;
  color: #000;
  border-bottom: 1rpx solid #ccc;
  height: 60rpx;
  box-sizing: border-box;
}
.itemPay{
  height: 100rpx;
  color: #3e3e3e;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ededed;
}
.itemNum>text:first-child{
  display: inline-block;
  margin-right: 80rpx;
}
 .showDialog{
  transform: translateY(150%);
  transition: all 1s ease;
} 