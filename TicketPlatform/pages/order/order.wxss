}
.byMobile{
  width: 160rpx;
  height: 50rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 25rpx 0 0 25rpx;
  box-sizing: border-box;
}
.click{
  background:-webkit-linear-gradient(left,#00b8c5,#008fa4);
  color: #fff;
}
.unclick{
  background: #fff;
  border: 1px solid #00a09a;
  color: #00a09a;
}
.byNumber{
  width: 160rpx;
  height: 50rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 0 25rpx 25rpx 0;
  box-sizing: border-box;
}
.query{
  display: flex;
  flex-direction: column;
  margin: 35rpx 0rpx 0rpx;
  padding:0rpx 40rpx;
}
.query image{
  width: 34rpx;
  height: 45rpx;
}
.query-flex{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #c7c7c7;
  height: 100rpx;
  align-items: center;
}

.query-flex input{
  padding-left:31rpx;
}
.messageBtn button{
  height: 50rpx;
  width: 185rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: center;
  background:-webkit-linear-gradient(left,#00b8c5,#008fa4);
  border-radius: 25rpx;
  color: #fff;
  margin-right: 10rpx;
}
.valiCodeImg image{
  width: 160rpx;
  height: 70rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.placeHolderStyle{
  color: #c7c7c7;
  font-size: 28rpx;
}
.searchOrder{
  margin-top: 80rpx;
}
.searchOrder button{
  width: 670rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  background: -webkit-linear-gradient(#80c9d3, #80dae1);
  color: #fff;
  border: none!important;
  letter-spacing: 5rpx;
}
.enableBtn{
  background: -webkit-linear-gradient(#0092a6, #00b4c2)!important;
}


