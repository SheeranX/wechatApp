.container{
  background: #fff;
}
.switchTab{
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  justify-content: center;
}

.caption{
  color: #666;
  font-size: 28rpx;
  font-weight: bold;
  display: inline-block;
  padding-top: 30rpx;
}
.loginStatus{
  font-size: 24rpx;
  color: #ff9c00;
  text-align: right;
  position: absolute;
