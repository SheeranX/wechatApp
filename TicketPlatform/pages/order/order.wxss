/* pages/order/order.wxss */
@import "../common/tabbar.wxss";
.hide{
  display: none;
}
.container{
  background: #fff;
}
.flex-row{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.switchTab{
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  justify-content: center;
}
.font28{
   font-size: 28rpx!important;
}
.font24{
  font-size: 24rpx;
}
.txt-center{
  text-align: center;
}
.caption{
  color: #666;
  font-weight: bold;
  display: inline-block;
  padding-top: 30rpx;
}
.loginStatus{
  text-align: right;
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  margin-top: -5rpx;
}
.switchTab{
  margin-top: 50rpx;
}
.byMobile{
  width: 180rpx;
  height: 55rpx;
  line-height: 55rpx;
  border-radius: 30rpx 0 0 30rpx;
  box-sizing: border-box;
}
.click{
  background:-webkit-linear-gradient(left,#00b8c5,#008fa4);
  color: #fff;
}
.unclick{
  background: #fff;
  border: 1px solid #00b8c5;
  color: #00b8c5;
}
.byNumber{
  width: 180rpx;
  height: 55rpx;
  line-height: 55rpx;
  border-radius: 0 30rpx 30rpx 0;
  box-sizing: border-box;
}
.query{
  display: flex;
  flex-direction: column;
  margin: 35rpx 0rpx 0rpx;
  padding:0rpx 40rpx;
}
.query image{
  width: 34rpx;
  height: 45rpx;
}
.query-flex{
  border-bottom: 1px solid #c7c7c7;
  height: 100rpx;
}

.query-flex input{
  padding-left:31rpx;
}
.messageBtn button{
  height: 55rpx;
  width: 200rpx;
  line-height: 55rpx;
  text-align: center;
  background:-webkit-linear-gradient(left,#00b8c5,#008fa4);
  border-radius: 30rpx;
  color: #fff;
  margin-right: 10rpx;
}
.valiCodeImg image{
  width: 160rpx;
  height: 70rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.placeHolderStyle{
  color: #c7c7c7;
  font-size: 28rpx;
}
.searchOrder{
  margin-top: 80rpx;
}
.searchOrder button{
  width: 670rpx;
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  background: -webkit-linear-gradient(#80c9d3, #80dae1);
  color: #fff;
  border: none!important;
  letter-spacing: 5rpx;
}
.enableBtn{
  background: -webkit-linear-gradient(#0092a6, #00b4c2)!important;
}


