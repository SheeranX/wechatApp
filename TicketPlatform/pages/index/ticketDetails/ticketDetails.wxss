/* pages/index/ticketDetails/ticketDetails.wxss */
@import "../../common/tabbar.wxss";
/* @import '../../common/wxParse/wxParse.wxss';  */
page
{
 background: #eeeef7;
}
.h3{
  font-size: 28rpx;
  color: #000;
}
.article{
  color: #666;
  font-size: 24rpx;
}
.circle{
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #00b8c5;
}
.outline{
  width: 100%;
  box-sizing: border-box;
  border-top: 1rpx solid #eeeef7;
}
.tabActive{
   border-bottom: 6rpx solid #00a09a;
   color: #00a09a;
}
.header{
  color: #3e3e3e;
  font-size: 24rpx;
  display: block;
}
.text-warning24{
  font-size: 24rpx;
  color: #ff9c00;
}
.text-normal{
  font-size: 24rpx;
  color: #989898;
}
.text-througn{
  text-decoration: line-through;
}
.text-warning28{
  font-size: 28rpx;
  color: #ff9c00;
}
.font32{
  font-size: 32rpx;
}
.text-remind{
  color: #666;
  font-size: 21rpx;
  display: block;
}
.flex-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}
.modal{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, .7);
  z-index: 999;
}
.modal image{
  width: 200rpx;
  height: 200rpx;
  float: right;
  margin-right: 20%;
}
.shareBtn{
  position: absolute;
  top: 0;
  right: 0;
  width: 120rpx;
  height: 100rpx;
  border: none;
}
button[plain]{ border:0 }
.share-icon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  right: 30rpx;
}
.banner-image{
  width: 100%;
  height: 360rpx;
}
.banner-image image:first-child{
  width: 100%;
  height: 360rpx;
}
.title{
  width: 100%;
  height: 100rpx;
  background: #fff;
  font-size: 28rpx;
  padding: 0 40rpx 0 60rpx;
  box-sizing: border-box;
  line-height: 100rpx;
  color: #3e3e3e;
}
.title .wired{
  margin-left: -25rpx;
}
.title>text{
  display: inline-block;
  width: 100%;
}
.address{
  width: 100%;
  color: #666;
  height: 100rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  padding: 0rpx 40rpx 0rpx 60rpx;
  background: #fff;
  /* border-top: 1rpx solid #ccc; */
  line-height: 100rpx;
}
.icon_locaiton{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  /* margin-right: 20rpx; */
  margin-top: -5rpx;
}
.arrow{
   width: 20rpx;
   height: 25rpx;
   position: absolute;
   right: 40rpx;
   margin-top: 35rpx;
}
.selectTab{
  width: 100%;
  height:  80rpx;
  background: #fff;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  line-height: 80rpx;
  margin-top: 20rpx;
}
.tabItem{
  font-size: 24rpx;
  color: #3e3e3e;
  justify-content: space-around;
  height: 80rpx;
  box-sizing: border-box;
}
.tabItem>view{
  width: 100rpx;
  text-align: center;
}
.item-ticket{
  width: 100%;
  height: 175rpx;
  background: #fff;
  /* padding: 20rpx 40rpx;  */
  justify-content: space-around;
  align-items: center;
}
.bouns{
  color: #00a09a;
  font-size: 24rpx;
  /* width: 200rpx; */
  position: absolute;
  margin-top: -6%;
  margin-left: 35%;
}
.Ticketdesc{
   width:70%; 
   min-width: 250rpx;
}

.bookBtn .btn{
  font-size: 24rpx;
  /* width: 160rpx; */
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  background: #00a09a;
}
.ticketItem{
  width: 100%;
  display:flex;
  box-sizing: border-box;
  flex-direction: column;
  margin-bottom: 80rpx;
  padding: 0rpx 40rpx;  
  background: #fff; 
}
.ticketItem .wired{
  margin-top: -85rpx;
}
.desc{
  width: 100%;
  background: #fff;
  padding:0 40rpx 60rpx 40rpx;
  box-sizing: border-box;
  margin-bottom: 80rpx;
}

